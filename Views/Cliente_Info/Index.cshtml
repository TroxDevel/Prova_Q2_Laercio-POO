@model IEnumerable<Prova_Q2_Laercio_POO.Models.Cliente_Info>

@{
    ViewBag.Title = "Administração de clientes";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Novo Cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.cli_NomeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cli_Celular)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cli_Cidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cli_Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cli_NomeCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_Celular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_Cidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cli_Estado)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.cli_Id_Cliente }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.cli_Id_Cliente }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.cli_Id_Cliente })
        </td>
    </tr>
}

</table>
